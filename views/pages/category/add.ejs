<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../../setups/head") %>
</head>

<body>
  <%- include("../../components/navbar") %>

    <section id="home-content" class="container">
      <div class="mt-5">
        <div class="align-items-center d-flex justify-content-between">
          <h3>Add Category Data</h3>

          <a href="/category" class="btn btn-outline-danger">Cancel</a>
        </div>

        <form class="mt-4" action="/category" method="post">
          <div class="mb-3 row justify-content-start">
            <div class="col-12">
              <label for="size" class="form-label">Name</label>

              <input type="text" name="name" class="form-control" id="size" placeholder="Sport Shoe" required />
            </div>
          </div>
          <button type="submit" class="btn btn-outline-primary mt-4">
            Add
          </button>
        </form>
      </div>
    </section>

    <script src="/scripts/previewImageScript.js" type="text/javascript" />
    </script>

    <%- include("../../setups/script") %>
</body>

</html>